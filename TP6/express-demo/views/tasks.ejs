    <!DOCTYPE html>
    <html>
    <head>
    <meta charset="UTF-8">
    <title>Liste des tâches</title>
    <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
    <h1>Tâches</h1>
    <ul>
        <% tasks.forEach(task => { %>
        <li>
            <%= task.title %> - 
            <% if (task.done) { %>
            ✅ Terminée
            <% } else { %>
            ⏳ En cours
            <% } %>
        </li>
        <% }) %>
    </ul>
    <a href="/">Retour à l'accueil</a>
    </body>
    </html>
